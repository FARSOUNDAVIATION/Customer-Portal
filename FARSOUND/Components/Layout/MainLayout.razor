@inherits LayoutComponentBase
@using FARSOUND.Components
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims

@inject AuthenticationStateProvider auth

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <style>
        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-menu {
            display: none;
            position: absolute;
            background-color: #FF4D00;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

        .dropdown:hover .dropdown-menu {
            display: block;
        }

        .dropdown-item {
            color: #FFFFFF;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

        .dropdown-item:hover {
            background-color: #f1f1f1;
        }
    </style>

    <main>
        <div class="top-row px-4">
             <CascadingAuthenticationState>
                <AuthorizeView>

                    @* Hello @username - @role <a href="/userarea/accounts/loggedout">Logout</a> *@
                    Hello @email - @role <a href="/userarea/accounts/signout">Logout</a>
                </AuthorizeView>
            </CascadingAuthenticationState>

            <div class="dropdown" style="@(username != null ? "display:none;" : "display:block;")">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Sign Up/Login
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <li><a class="dropdown-item" href="userarea/accounts/register">Register</a></li>
                    <li><a class="dropdown-item" href="userarea/accounts/login">Login</a></li>
                    <li><a class="dropdown-item" href="register">Role Based Register</a></li>
                    <li><a class="dropdown-item" href="login">Role Based Login</a></li>
                    <li><a class="dropdown-item" href="userarea/accounts/loggedout">Logout</a></li>
                </ul>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>


@code {
    public string username { get; set; }
    public string email { get; set; }
    public string role { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var state = await auth.GetAuthenticationStateAsync();
        var user = state.User;
        if (user.Identity.IsAuthenticated)
        {
            username = user.Claims.FirstOrDefault(x => x.Type == ClaimTypes.Name)?.Value;
            email = user.Claims.FirstOrDefault(x => x.Type == ClaimTypes.Name)?.Value;
            role = user.Claims.FirstOrDefault(x => x.Type == ClaimTypes.Role)?.Value;
        }

    }
}
